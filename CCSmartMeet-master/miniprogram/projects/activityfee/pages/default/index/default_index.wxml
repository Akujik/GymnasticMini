<view class="main">
  <view class="up">
    <cmpt-swiper images="{{newsImageList}}" height="450"></cmpt-swiper>
    <view class="statusBarBg"></view>
  </view>
  <view class="down">
    <view class="menu">
      <view wx:for="{{cateList}}" wx:key="key" bindtap="url" data-type="relaunch" data-url="../../activity/index/activity_index?id={{item.id}}" class="item">
        <view class="item-inner">
          <view class="img">
            <image src="../../../images/menu/{{item.id}}.png" />
          </view>
          <view class="title">{{item.title}}</view>
        </view>
      </view>
    </view>
    <view class="shopSection">
      <view class="currentShop">
        <image src="../../../images/logo.png" mode="aspectFit" />
        <text class="content-cut-one">{{shop.shopName||'请选择门店'}}</text>
        <button bindtap="bindShopTap" class="btn-base">切换门店</button>
      </view>
      <view wx:if="{{shopDistance}}" class="shopAddress" bindtap="bindOpenMapTap">
        <image src="../../../images/map.png" mode="aspectFit" />
        <text class="content-cut-two">{{shop.shopAddressGeo.address}}</text>
        <view class="place">
          <image src="../../../images/place.png" mode="aspectFit" />
          <text class="content-cut-one">距您{{shopDistance||""}}</text>
        </view>
      </view>
      <view class="shopManager" bindtap="bindContactTap">
        <image src="cloud://bgc-7gs6bb00a716c818.6267-bgc-7gs6bb00a716c818-1325482544/activityfee/user/teacher.jpg" mode="aspectFit" />
        <view>
          <text class="content-cut-one">我是负责人陈老师</text>
          <text class="content-cut-one">有问题可以随时联系我</text>
        </view>
        <image src="../../../images/phone.png" mode="aspectFit" />
      </view>
    </view>
    <view class="activitySection">
      <image src="../../../images/recommend.png" mode="aspectFit" />
      <view>
        <view wx:for="{{hotList}}" wx:key="key" class="listItem" bindtap="url" data-url="../../activity/detail/activity_detail?id={{item._id}}">
          <image mode="aspectFill" lazy-load="{{true}}" class="loading" src="{{item.ACTIVITY_OBJ.cover[0]}}"></image>
          <view class="right">
            <view class="title content-cut-one">{{item.ACTIVITY_TITLE}}</view>
            <view class="desc">
              <text class="content-cut-two">
                <text class="margin-right-xs">{{item.time}}</text>
                <!-- {{item.ACTIVITY_JOIN_CNT}}人报名 -->
              </text>
            </view>
          </view>
          <text class="icon-right margin-left-s"></text>
        </view>
      </view>
    </view>
  </view>
</view>
<cmpt-modal show="{{showContact}}" showClose="{{false}}" width="{{550}}">
  <image src="cloud://bgc-7gs6bb00a716c818.6267-bgc-7gs6bb00a716c818-1325482544/activityfee/user/contact.jpg" mode="aspectFit" class="contact" show-menu-by-longpress />
</cmpt-modal>
<block wx:if="{{skin.IS_SUB}}">
  <import src="../../tpls/menu_tpl.wxml" />
  <template is="menuTpl" data="{{curMenu:'home_index',returnHome:false}}" />
</block>